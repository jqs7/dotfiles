#cmus
set $mode_cmus Cmus (i) pause, (n) next, (p) prev, (h) -5s, (l) +5s
mode "$mode_cmus" {
    bindsym i      exec cmus-remote --pause, mode "default"
    bindsym n      exec cmus-remote --next
    bindsym p      exec cmus-remote --prev
    bindsym h      exec cmus-remote --seek -5
    # bindsym j      exec cmus-remote --volume -2
    # bindsym k      exec cmus-remote --volume +2
    bindsym l      exec cmus-remote --seek +5
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+m mode "$mode_cmus"

